<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jcohy.scis.mapper.BkConfigMapper">
  <resultMap id="BaseResultMap" type="com.jcohy.scis.model.BkConfig">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="config_type" jdbcType="VARCHAR" property="configType" />
    <result column="code" jdbcType="INTEGER" property="code" />
    <result column="zh_name" jdbcType="VARCHAR" property="zhName" />
    <result column="add_time" jdbcType="TIMESTAMP" property="addTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="is_delete" jdbcType="TINYINT" property="isDelete" />
  </resultMap>

  <sql id="Base_Column_List">
    id, config_type, code, zh_name, add_time, update_time, is_delete
  </sql>


  <select id="querySubType" resultType="com.jcohy.scis.model.BkConfig">
    SELECT
      CODE as code,
      zh_name AS zhName
    FROM
      bk_config
    WHERE is_delete = 0
    <if test="productType != null">
      AND config_type = #{productType,jdbcType=VARCHAR}
    </if>
  </select>

  <select id="queryConfigType" resultType="com.jcohy.scis.model.BkConfig">
    SELECT DISTINCT
      config_type AS configType
    FROM
      bk_config
    WHERE is_delete = 0
  </select>
</mapper>